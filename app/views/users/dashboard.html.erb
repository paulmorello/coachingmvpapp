
<div class="eleven wide column">
  <h2 class="ui header">Dashboard for <%= @user.first_name %> <%= @user.last_name %></h2>

  <section>
    <div>
      <h3 class="ui header">Your Previously Reviewed Games</h3>
    </div>
    <table class="ui striped table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Game Date</th>
          <th>Your Name</th>
          <th></th>
        </tr>
        <tbody>
          <% if @previous_games.empty? %>
              <td>No Previous Games Reviewed</td>
          <% else %>
            <% @previous_games.each do |game| %>
              <tr>
                <td><%= game.title %></td>
                <td><%= game.date %></td>
                <td><%= game.team_name %></td>
                <td><a href="#" type="button" class="ui button green">See Game Review</a></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </thead>
    </table>
  </section>

  <section>
    <div>
      <h3 class="ui header">Your Season Averages</h3>
    </div>
    <table class="ui striped table">
      <thead>
        <tr>
          <th>GS</th>
          <th>Mins</th>
          <th>FGM</th>
          <th>FGA</th>
          <th>3PM</th>
          <th>3PA</th>
          <th>3PP</th>
          <th>FTM</th>
          <th>FTA</th>
          <th>FTP</th>
          <th>ORB</th>
          <th>DRB</th>
          <th>TRB</th>
          <th>AST</th>
          <th>STL</th>
          <th>BLK</th>
          <th>TO</th>
          <th>PF</th>
          <th>PTS</th>
        </tr>
        <tbody>
          <% if @stats.empty? %>
            <td>No Previous Games Reviewed</td>
          <% else %>
            <% @stats.each do |game| %>
              <tr>
                <td><%= game.game_started %></td>
                <td><%= game.minutes %></td>
                <td><%= game.fgm %></td>
                <td><%= game.fga %></td>
                <td><%= game.threepm %></td>
                <td><%= game.threepa %></td>
                <td><%= game.threepp %></td>
                <td><%= game.ftm %></td>
                <td><%= game.fta %></td>
                <td><%= game.ftp %></td>
                <td><%= game.offensive_reb %></td>
                <td><%= game.defensive_reb %></td>
                <td><%= game.total_reb %></td>
                <td><%= game.assists %></td>
                <td><%= game.steals %></td>
                <td><%= game.block %></td>
                <td><%= game.turnovers %></td>
                <td><%= game.pfs %></td>
                <td><%= game.points %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </thead>
    </table>
  </section>
</div>
