
<div class="eleven wide column dashboard-main">
  <section class="dashboard-header">
    <div class="dashboard-header-left">
      <img class="dashboard-image" src="<%= @user.avatar %>" alt="">
    </div>
    <div class="dashboard-header-right">
      <h2 class="ui header">Dashboard for <%= @user.first_name %> <%= @user.last_name %></h2>
    </div>
  </section>

  <section class="dashboard-middle">
    <div>
      <h3 class="ui header">Your Previously Reviewed Games</h3>
    </div>
    <table class="ui striped table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Game Date</th>
          <th>Your Name</th>
          <th></th>
        </tr>
        <tbody>
          <% if @previous_games.empty? %>
              <td>No Previous Games Reviewed</td>
          <% else %>
            <% @previous_games.each do |game| %>
              <tr>
                <td><%= game.title %></td>
                <td><%= game.date %></td>
                <td><%= game.team_name %></td>
                <td><a href="#" type="button" class="ui button green">See Game Review</a></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </thead>
    </table>
  </section>

  <section>
    <div>
      <h3 class="ui header">Your Season Averages</h3>
    </div>
    <table class="ui striped table">
      <thead>
        <tr>
          <th>GS</th>
          <th>Mins</th>
          <th>FGM</th>
          <th>FGA</th>
          <th>FGP</th>
          <th>3PM</th>
          <th>3PA</th>
          <th>3PP</th>
          <th>FTM</th>
          <th>FTA</th>
          <th>FTP</th>
          <th>ORB</th>
          <th>DRB</th>
          <th>TRB</th>
          <th>AST</th>
          <th>STL</th>
          <th>BLK</th>
          <th>TO</th>
          <th>PF</th>
          <th>PTS</th>
        </tr>
        <tbody>
          <% if @averages.empty? %>
            <td>No Previous Games Reviewed</td>
          <% else %>
            <tr>
              <td><%= @averages["gs"] %></td>
              <td><%= @averages["mins"] %></td>
              <td><%= @averages["fgm"] %></td>
              <td><%= @averages["fga"] %></td>
              <td><%= @averages["fgp"] %>%</td>
              <td><%= @averages["threepm"] %></td>
              <td><%= @averages["threepa"] %></td>
              <td><%= @averages["threepp"] %>%</td>
              <td><%= @averages["ftm"] %></td>
              <td><%= @averages["fta"] %></td>
              <td><%= @averages["ftp"] %>%</td>
              <td><%= @averages["orb"] %></td>
              <td><%= @averages["drb"] %></td>
              <td><%= @averages["trb"] %></td>
              <td><%= @averages["ast"] %></td>
              <td><%= @averages["stl"] %></td>
              <td><%= @averages["blk"] %></td>
              <td><%= @averages["to"] %></td>
              <td><%= @averages["pfs"] %></td>
              <td><%= @averages["pts"] %></td>
            </tr>
          <% end %>
        </tbody>
      </thead>
    </table>
  </section>
</div>
