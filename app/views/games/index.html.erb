<div class="eight wide column">
  <section>
    <h2>Main page that shows all reviewed games for a user in the dashboard</h2>
  </section>


  <section class="games-middle">
    <div>
      <h3 class="ui header">Your Previously Reviewed Games</h3>
    </div>
    <table class="ui striped table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Game Date</th>
          <th>Your Name</th>
          <th></th>
        </tr>
        <tbody>
          <% if @previous_games.empty? %>
              <td>No Previous Games Reviewed</td>
          <% else %>
            <% @previous_games.each do |game| %>
              <tr>
                <td><%= game.title %></td>
                <td><%= game.date %></td>
                <td><%= game.team_name %></td>
                <td><a href="#" type="button" class="ui button green">See Game Review</a></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </thead>
    </table>
  </section>
</div>
